{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Node.js TypeScript Boilerplate",
  "main": "build/index.js",
  "scripts": {
    "start": "yarn run env:dev && tsc -w & nodemon build/example",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "lint": "tslint src/*.ts && tslint example/*.ts && tslint test/*.ts",
    "commit": "git add --all && git status",
    "dep:update": "ncu -ua && yarn",
    "env:dev": "cross-env NODE_ENV=development",
    "env:prod": "cross-env NODE_ENV=production",
    "test": "mocha -c -S -R spec --compilers ts:ts-node/register --check-leaks",
    "test:watch": "yarn test -- -w"
  },
  "keywords": [
    "boilerplate",
    "skeleton",
    "starter",
    "ts",
    "typescirpt-node",
    "typescript",
    "typescript-boilerplate",
    "typescript-skeleton",
    "typescript-starter"
  ],
  "author": "Maik Ellerbrock <opensource@frapsoft.com> (https://github.com/ellerbrock)",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "chai": "^3.5.0",
    "cross-env": "^3.1.3",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "npm-check-updates": "^2.8.6",
    "rimraf": "^2.5.4",
    "ts-node": "^1.7.0",
    "tsdoc": "^0.0.4",
    "tslint": "^3.15.1",
    "typescript": "^2.0.7"
  },
  "dependencies": {
    "yarn": "^0.16.1"
  }
}
